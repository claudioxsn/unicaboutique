<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="UnicaBoutiquePU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>model.Cliente_Model</class>
    <class>model.Fornecedor_Model</class>
    <class>model.Funcionario_Model</class>
    <class>model.Pessoa</class>
    <class>model.Produto_Model</class>
    <class>model.Caixa_Model</class>
    <class>model.Compra_Model</class>
    <class>model.Itens_Compra</class>
    <class>model.Itens_Venda</class>
    <class>model.PagamentoCompra_Model</class>
    <class>model.PagamentoVenda_Model</class>
    <class>model.Venda_Model</class>
    <class>model.Contas_Diversas_Model</class>
    <class>model.EntradaCaixa_Model</class>
    <class>model.SaidaCaixa_Model</class>
    <class>model.Condicional_Model</class>
    <class>model.Itens_Condicional</class>
    <class>model.NivelAcesso_Model</class>
    <class>model.Usuario_Model</class>
    <class>model.Empresa_Model</class>
    <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/unicaboutique"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.password" value="postgres"/>
      <property name="eclipselink.logging.level.sql" value="FINE"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
